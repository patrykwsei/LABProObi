@model List<Lab07.Models.products.Product>
@using Lab07.Models.products

<h2>Lista produktów</h2>

<a asp-action="Create" class="btn btn-primary mb-2">Dodaj nowy</a>

@if (Model.Count == 0)
{
    <p>Brak produktów.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Nazwa</th>
            <th>Cena</th>
            <th>Producent</th>
            <th>Kategoria</th>
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.ProducerName</td>
                <td>@item.Category</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}