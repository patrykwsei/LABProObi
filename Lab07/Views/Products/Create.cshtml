@model Lab07.Models.products.Product

<h2>Dodaj produkt</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Producer"></label>
        <input asp-for="Producer" class="form-control" />
        <span asp-validation-for="Producer" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="ProductionDate"></label>
        <input asp-for="ProductionDate" class="form-control" type="date" />
        <span asp-validation-for="ProductionDate" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Category"></label>
        <select class="form-control"
                asp-for="Category"
                asp-items="@Html.GetEnumSelectList<Lab07.Models.products.ProductCategory>()">
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <button class="btn btn-success" type="submit">Zapisz</button>
    <a class="btn btn-secondary" asp-action="Index">Anuluj</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}