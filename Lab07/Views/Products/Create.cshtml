@model Lab07.Models.products.Product
@using Lab07.Models.products

<h2>Dodaj produkt</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control"/>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="ProducerName"></label>
        <input asp-for="ProducerName" class="form-control" />
        <span asp-validation-for="ProducerName" class="text-danger"></span>
    </div>


    <div class="mb-2">
        <label asp-for="ProductionDate"></label>
        <input asp-for="ProductionDate" type="date" class="form-control"/>
        <span asp-validation-for="ProductionDate" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Category"></label>
        <select asp-for="Category" asp-items="@Html.GetEnumSelectList<ProductCategory>()" class="form-control"></select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Zapisz</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>