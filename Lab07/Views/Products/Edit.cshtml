@model Lab07.Models.products.Product

<h2>Edytuj produkt</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="Id" />

    <div class="mb-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control"/>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Producer"></label>
        <input asp-for="Producer" class="form-control"/>
        <span asp-validation-for="Producer" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="ProductionDate"></label>
        <input asp-for="ProductionDate" class="form-control" type="date"/>
        <span asp-validation-for="ProductionDate" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Zapisz</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>