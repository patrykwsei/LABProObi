@model Lecture2.Models.Book

@{
    ViewBag.Title = "Edit book";
    Layout = "_Layout";
}

<h2>Edytuj książkę</h2>
<form asp-action="Edit">
    <input asp-for="Id"/>
    <div class="form-group mb-3">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control"/>
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="ISBN" class="control-label"></label>
        <input asp-for="ISBN" class="form-control"/>
        <span class="text-danger" asp-validation-for="ISBN"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Pages" class="control-label"></label>
        <input asp-for="Pages" class="form-control"/>
        <span class="text-danger" asp-validation-for="Pages"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="PublishingYear" class="control-label"></label>
        <input asp-for="PublishingYear" class="form-control"/>
        <span class="text-danger" asp-validation-for="PublishingYear"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Category" class="control-label"></label>
        <select asp-for="Category" asp-items="Html.GetEnumSelectList<Lecture2.Models.Category>()" class="form-control"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Zapisz" class="btn btn-primary"/>
    </div>
</form>